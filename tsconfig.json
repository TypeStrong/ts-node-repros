{
    "compilerOptions": {
      "esModuleInterop": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "pretty": true,
      "types": [
        "jest",
        "node"
      ],
      "sourceMap": true,
      "target": "es6",
      "lib": [
        "es2019"
      ],
      "baseUrl": "./"
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude": [
      "node_modules"
    ]
}